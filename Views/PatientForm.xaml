<Window x:Class="PhysioCenter.Wpf.Views.PatientForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إضافة مراجع"
        WindowStartupLocation="CenterScreen"
        Width="420"
        Height="500"
        Background="#FF0D1524"
        FlowDirection="RightToLeft">

    <Border Style="{StaticResource GlassCardStyle}"
            Margin="20">
        <StackPanel>

            <TextBlock Text="إضافة مراجع"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <TextBlock Text="الاسم"
                       Foreground="White"/>
            <TextBox x:Name="NameBox"
                     Margin="0,0,0,10"/>

            <TextBlock Text="الهاتف"
                       Foreground="White"/>
            <TextBox x:Name="PhoneBox"
                     Margin="0,0,0,10"/>

            <TextBlock Text="تاريخ الميلاد"
                       Foreground="White"/>
            <DatePicker x:Name="BirthBox"
                        Margin="0,0,0,10"/>

            <TextBlock Text="ملاحظات"
                       Foreground="White"/>
            <TextBox x:Name="NotesBox"
                     Height="90"
                     TextWrapping="Wrap"
                     Margin="0,0,0,20"/>

            <Button Content="حفظ"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Height="40"
                    Click="Save_Click"/>

        </StackPanel>
    </Border>

</Window>
