<UserControl x:Class="PhysioCenter.Wpf.Views.UsersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="0,0,0,10">

            <TextBlock Text="إدارة المستخدمين"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="White"/>

            <Button Content="إضافة مستخدم"
                    Margin="20,0,0,0"
                    Padding="20,6"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="AddUser_Click"/>
        </StackPanel>


        <!-- جدول المستخدمين -->
        <Border Grid.Row="1"
                Style="{StaticResource GlassCardStyle}"
                Padding="10">
            <DataGrid x:Name="UsersGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Background="#22FFFFFF"
                      Foreground="White"
                      RowHeight="34">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="اسم المستخدم"
                                        Binding="{Binding Username}"
                                        Width="*"/>

                    <DataGridTextColumn Header="الدور"
                                        Binding="{Binding Role}"
                                        Width="*"/>

                    <DataGridTemplateColumn Header="إجراءات"
                                            Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">

                                    <Button Content="تعديل"
                                            Padding="10,2"
                                            Margin="4,0"
                                            Click="EditUser_Click"/>

                                    <Button Content="حذف"
                                            Padding="10,2"
                                            Margin="4,0"
                                            Click="DeleteUser_Click"/>

                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>

</UserControl>
