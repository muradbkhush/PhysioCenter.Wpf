<UserControl x:Class="PhysioCenter.Wpf.Views.AppointmentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <!-- التقويم -->
            <ColumnDefinition Width="*"/>
            <!-- قائمة المواعيد -->
        </Grid.ColumnDefinitions>

        <!-- التقويم -->
        <Border Style="{StaticResource GlassCardStyle}"
                Margin="0,0,20,0">
            <StackPanel>
                <TextBlock Text="التقويم"
                           FontSize="22"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <Calendar x:Name="AppointmentsCalendar"
                          DisplayMode="Month"
                          SelectionMode="SingleDate"
                          Background="#11FFFFFF"
                          Foreground="White"
                          SelectedDatesChanged="AppointmentsCalendar_SelectedDatesChanged"/>
            </StackPanel>
        </Border>

        <!-- قائمة مواعيد اليوم -->
        <Border Grid.Column="1"
                Style="{StaticResource GlassCardStyle}">
            <StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="مواعيد اليوم"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"/>

                    <Button Content="إضافة موعد"
                            Margin="20,0,0,0"
                            Padding="20,8"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="AddAppointment_Click"/>
                </StackPanel>

                <DataGrid x:Name="AppointmentsGrid"
                          AutoGenerateColumns="False"
                          Background="#22FFFFFF"
                          Foreground="White"
                          Margin="0,20,0,0"
                          HeadersVisibility="Column">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="المراجع"
                                            Binding="{Binding Patient.FullName}"
                                            Width="*"/>

                        <DataGridTextColumn Header="المعالج"
                                            Binding="{Binding Therapist.FullName}"
                                            Width="*"/>

                        <DataGridTextColumn Header="الوقت"
                                            Binding="{Binding Date, StringFormat=t}"
                                            Width="120"/>

                        <DataGridTextColumn Header="الحالة"
                                            Binding="{Binding Status}"
                                            Width="120"/>

                    </DataGrid.Columns>

                </DataGrid>

            </StackPanel>
        </Border>

    </Grid>

</UserControl>
