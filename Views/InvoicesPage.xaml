<UserControl x:Class="PhysioCenter.Wpf.Views.InvoicesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- العنوان + زر الإضافة -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="الفواتير"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"/>

            <Button Content="إنشاء فاتورة"
                    Margin="20,0,0,0"
                    Padding="20,8"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="AddInvoice_Click"/>
        </StackPanel>

        <!-- جدول الفواتير -->
        <Border Grid.Row="1"
                Style="{StaticResource GlassCardStyle}"
                Margin="0,20,0,0">

            <DataGrid x:Name="InvoicesGrid"
                      AutoGenerateColumns="False"
                      Background="#22FFFFFF"
                      Foreground="White"
                      HeadersVisibility="Column"
                      IsReadOnly="True">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="رقم الفاتورة"
                                        Binding="{Binding Id}"
                                        Width="100"/>

                    <DataGridTextColumn Header="التاريخ"
                                        Binding="{Binding Date, StringFormat=yyyy/MM/dd}"
                                        Width="150"/>

                    <DataGridTextColumn Header="المراجع"
                                        Binding="{Binding PatientName}"
                                        Width="*"/>

                    <DataGridTextColumn Header="الإجمالي"
                                        Binding="{Binding TotalAmount}"
                                        Width="150"/>

                </DataGrid.Columns>

            </DataGrid>

        </Border>

    </Grid>

</UserControl>
