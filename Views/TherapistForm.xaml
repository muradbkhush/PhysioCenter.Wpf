<Window x:Class="PhysioCenter.Wpf.Views.TherapistForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إضافة معالج"
        WindowStartupLocation="CenterScreen"
        Width="420"
        Height="400"
        Background="#FF0D1524"
        FlowDirection="RightToLeft">

    <Border Style="{StaticResource GlassCardStyle}"
            Margin="20">
        <StackPanel>

            <TextBlock Text="إضافة معالج"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <TextBlock Text="الاسم"
                       Foreground="White"/>
            <TextBox x:Name="NameBox"
                     Margin="0,0,0,10"/>

            <TextBlock Text="التخصص"
                       Foreground="White"/>
            <TextBox x:Name="SpecialtyBox"
                     Margin="0,0,0,20"/>

            <Button Content="حفظ"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Height="40"
                    Click="Save_Click"/>

        </StackPanel>
    </Border>

</Window>
