<UserControl x:Class="PhysioCenter.Wpf.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="إعدادات المركز"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <Border Grid.Row="1"
                Style="{StaticResource GlassCardStyle}"
                Padding="20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="اسم المركز"
                           Foreground="White"/>
                <TextBox x:Name="ClinicNameBox"
                         Margin="0,6,0,12"/>

                <TextBlock Grid.Row="1"
                           Text="العنوان"
                           Foreground="White"/>
                <TextBox Grid.Row="1"
                         x:Name="AddressBox"
                         Margin="0,6,0,12"/>

                <TextBlock Grid.Row="2"
                           Text="رقم الهاتف"
                           Foreground="White"/>
                <TextBox Grid.Row="2"
                         x:Name="PhoneBox"
                         Margin="0,6,0,12"/>

                <TextBlock Grid.Row="3"
                           Text="شعار المركز"
                           Foreground="White"/>
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            Margin="0,6,0,12">
                    <Image x:Name="LogoPreview"
                           Width="100"
                           Height="100"
                           Stretch="UniformToFill"
                           Margin="0,0,20,0"/>

                    <Button Content="اختيار ملف"
                            Click="SelectLogo_Click"
                            Padding="16,6"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>

                <Button Grid.Row="4"
                        Content="حفظ الإعدادات"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="42"
                        Width="200"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0"
                        Click="SaveSettings_Click"/>

            </Grid>
        </Border>

    </Grid>

</UserControl>
