<Window x:Class="PhysioCenter.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhysioCenter – Dashboard"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource DarkBgBrush}"
        FlowDirection="RightToLeft">

        <Grid>

                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- الشريط الجانبي -->
                <Border Background="#FF0B101B"
                        Grid.Column="0">
                        <StackPanel Margin="20"
                                    VerticalAlignment="Stretch">

                                <TextBlock Text="PhysioCenter"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="0,10,0,4"/>

                                <TextBlock Text="Khattab Clinic"
                                           Foreground="#CCFFFFFF"
                                           FontSize="12"
                                           Margin="0,0,0,24"/>

                                <Button Content="لوحة التحكم"
                                        Margin="0,4"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="DashboardButton_Click"/>

                                <Button Content="المراجعين"
                                        Margin="0,4"
                                        Click="PatientsButton_Click"/>

                                <Button Content="المعالجين"
                                        Margin="0,4"
                                        Click="TherapistsButton_Click"/>

                                <Button Content="المواعيد"
                                        Margin="0,4"
                                        Click="AppointmentsButton_Click"/>

                                <Button Content="الجلسات العلاجية"
                                        Margin="0,4"
                                        Click="SessionsButton_Click"/>

                                <Button Content="النظام المالي"
                                        Margin="0,4"
                                        Click="FinanceButton_Click"/>

                                <Button Content="المستخدمين"
                                        Margin="0,4"
                                        Click="UsersButton_Click"/>

                                <Button Content="إعدادات المركز"
                                        Margin="0,4"
                                        Click="SettingsButton_Click"/>

                                <Button Content="سجل العمليات"
                                        Margin="0,4"
                                        Click="AuditLogButton_Click"/>

                                <StackPanel Margin="0,40,0,0">
                                        <TextBlock x:Name="CurrentUserText"
                                                   Foreground="#CCFFFFFF"
                                                   FontSize="12"/>
                                </StackPanel>
                        </StackPanel>
                </Border>

                <!-- منطقة المحتوى -->
                <Grid Grid.Column="1"
                      Margin="16">
                        <Grid.Background>
                                <ImageBrush ImageSource="/Assets/login-bg.png"
                                            Stretch="UniformToFill"
                                            AlignmentX="Center"
                                            AlignmentY="Center"
                                            Opacity="0.35"/>
                        </Grid.Background>

                        <Border Style="{StaticResource GlassCardStyle}">
                                <Grid x:Name="ContentHost">
                                        <!-- سيتم استبداله ديناميكياً -->
                                        <TextBlock Text="مرحباً بك في نظام PhysioCenter – سيتم لاحقاً هنا بناء لوحة التحكم."
                                                   Foreground="White"
                                                   FontSize="20"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                </Grid>
                        </Border>
                </Grid>

        </Grid>
</Window>
