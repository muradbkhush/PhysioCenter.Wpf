<UserControl x:Class="PhysioCenter.Wpf.Views.AuditLogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <TextBlock Text="سجل العمليات"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <!-- فلاتر -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,0,0,16">

            <StackPanel Margin="0,0,16,0">
                <TextBlock Text="من تاريخ"
                           Foreground="White"/>
                <DatePicker x:Name="FromDate"
                            Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,16,0">
                <TextBlock Text="إلى تاريخ"
                           Foreground="White"/>
                <DatePicker x:Name="ToDate"
                            Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,16,0"
                        VerticalAlignment="Bottom">
                <TextBlock Text="المستخدم"
                           Foreground="White"/>
                <TextBox x:Name="UsernameFilterBox"
                         Width="150"
                         Margin="0,4,0,0"/>
            </StackPanel>

            <Button Content="تحديث"
                    Margin="0,24,0,0"
                    Padding="20,4"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="RefreshButton_Click"/>

        </StackPanel>

        <!-- الجدول -->
        <Border Grid.Row="2"
                Style="{StaticResource GlassCardStyle}"
                Padding="10">
            <DataGrid x:Name="AuditGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="#22FFFFFF"
                      Foreground="White"
                      HeadersVisibility="Column"
                      RowHeight="32">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="التاريخ"
                                        Binding="{Binding Date, StringFormat=yyyy/MM/dd HH:mm}"
                                        Width="180"/>

                    <DataGridTextColumn Header="المستخدم"
                                        Binding="{Binding Username}"
                                        Width="160"/>

                    <DataGridTextColumn Header="العملية"
                                        Binding="{Binding Action}"
                                        Width="*"/>

                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>
</UserControl>
