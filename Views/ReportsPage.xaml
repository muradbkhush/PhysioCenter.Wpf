<UserControl x:Class="PhysioCenter.Wpf.Views.ReportsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <TextBlock Text="التقارير المالية"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <!-- الفلاتر -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,0,0,20">

            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="من"
                           Foreground="White"/>
                <DatePicker x:Name="FromDate"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="إلى"
                           Foreground="White"/>
                <DatePicker x:Name="ToDate"/>
            </StackPanel>

            <Button Content="عرض"
                    Margin="20,20,0,0"
                    Padding="20,5"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="LoadReport_Click"/>
        </StackPanel>

        <!-- النتائج -->
        <Border Grid.Row="2"
                Style="{StaticResource GlassCardStyle}">
            <StackPanel>

                <TextBlock Text="النتائج"
                           FontSize="20"
                           Foreground="White"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <TextBlock Text="إجمالي الإيرادات:"
                               Foreground="White"
                               Width="150"/>
                    <TextBlock x:Name="RevenueText"
                               Foreground="Lime"
                               FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <TextBlock Text="إجمالي المصاريف:"
                               Foreground="White"
                               Width="150"/>
                    <TextBlock x:Name="ExpensesText"
                               Foreground="Gold"
                               FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <TextBlock Text="صافي الربح:"
                               Foreground="White"
                               Width="150"/>
                    <TextBlock x:Name="ProfitText"
                               Foreground="Cyan"
                               FontWeight="Bold"/>
                </StackPanel>

                <Separator Margin="0,20"/>

                <TextBlock Text="مخطط الإيرادات الشهرية"
                           Foreground="White"
                           FontSize="18"/>

                <!-- Placeholder — سنعوضه لاحقاً ب Chart حقيقي -->
                <Border Background="#22000000"
                        Height="260"
                        CornerRadius="15"
                        Margin="0,10,0,0">
                    <TextBlock Text="(سيتم إضافة المخطط لاحقاً)"
                               Foreground="#99FFFFFF"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>

            </StackPanel>
        </Border>

    </Grid>

</UserControl>
